{
  "name": "react-boilerplate",
  "author": "Jonas Mosbech <jonas@mosbech.net>",
  "license": "MIT",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build-js": "browserify -t reactify -t envify browser/app.jsx | uglifyjs --mangle --compress > static/build/bundle.js",
    "build": "npm run build-js && npm run build-css && node ./bin/build-info.js",
    "watch-js": "watchify -t reactify browser/app.jsx --outfile static/build/bundle.js --debug",
    "build-css": "node-sass --source-map --output-style compressed --output static/build/bundle.css browser/css/style.scss",
    "watch": "nodemon bin/watch.js"
  },
  "dependencies": {
    "express": "3.5.0",
    "ejs": "~0.8.5",
    "envify": "~1.2.1",
    "react": "~0.9.0",
    "browserify": "~3.32.0",
    "uglify-js": "~2.4.12",
    "reactify": "~0.9.1",
    "node-sass": "~0.8.3"
  },
  "devDependencies": {
    "watchify": "~0.6.1",
    "nodemon": "~1.0.15",
    "miniwatch": "~0.1.1"
  }
}
